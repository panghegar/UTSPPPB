<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SecondActivity"
    android:orientation="vertical"
    >

    <RelativeLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp">

        <RelativeLayout
            android:id="@+id/navbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/btnBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_back" />

            <TextView
                android:id="@+id/username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="-5dp"
                android:text="_iknip"
                android:textSize="18dp"
                android:textStyle="bold"

                />

            <ImageView
                android:id="@+id/titikTiga"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="10dp"
                android:src="@drawable/ic_titik_tiga" />

            <ImageView
                android:id="@+id/bell"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_toLeftOf="@+id/titikTiga"
                android:src="@drawable/ic_bell" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/inpo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/navbar"
            android:layout_marginTop="30dp">

            <ImageView
                android:id="@+id/pp"
                android:layout_width="103dp"
                android:layout_height="87dp"
                android:src="@drawable/pp" />

            <TextView
                android:id="@+id/jmlPost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:text="6956"
                android:textSize="20dp"
                android:textStyle="bold"
                />
            <TextView
                android:id="@+id/postingan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/jmlPost"
                android:layout_marginLeft="-60dp"
                android:layout_marginTop="40dp"
                android:text="Postingan"
                android:textSize="17dp"
                android:textStyle="bold" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:text="27,7Jt"
                android:textSize="20dp"
                android:textStyle="bold"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/jmlPost"
                android:layout_marginLeft="-60dp"
                android:layout_marginTop="40dp"
                android:text="Pengikut"
                android:textSize="17dp"
                android:textStyle="bold" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="20dp"
                android:text="219"
                android:textSize="20dp"
                android:textStyle="bold"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/jmlPost"
                android:layout_marginLeft="-55dp"
                android:layout_marginTop="40dp"
                android:text="Mengikuti"
                android:textSize="17dp"
                android:textStyle="bold" />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/deskripsi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/inpo"
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/nama"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ikhwan Hanipp"
                android:textSize="17dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/job"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/nama"
                android:text="Programer"
                android:textColor="#9A9A9A"
                android:textSize="17dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/quote"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/job"
                android:text="“You might not think that programmers are  artists, but programming is an extremely creative profession. It’s  logic-based creativity.” – John Romero  💻"
                android:textSize="15dp"
                android:textStyle="bold" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_edit"
                android:layout_width="170dp"
                android:layout_height="30dp"
                android:layout_below="@id/quote"
                android:layout_marginTop="10dp"
                android:background="@drawable/background_abu"
                android:text="@string/edit_profile" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_share"
                android:layout_width="170dp"
                android:layout_height="30dp"
                android:layout_below="@id/quote"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/btn_edit"
                android:background="@drawable/background_abu"
                android:text="@string/edit_profile" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/pilihan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/deskripsi"
            android:layout_marginTop="30dp">

            <ImageView
                android:id="@+id/icon_feed"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginLeft="20dp"
                android:src="@drawable/ic_feed" />

            <ImageView
                android:id="@+id/icon_reel"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginLeft="110dp"
                android:layout_toRightOf="@+id/icon_feed"
                android:src="@drawable/ic_reels" />

            <ImageView
                android:id="@+id/icon_tag"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginLeft="110dp"
                android:layout_toRightOf="@+id/icon_reel"
                android:src="@drawable/ic_tag" />
        </RelativeLayout>


    </RelativeLayout>

    <LinearLayout
        android:id="@+id/bottomBar"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="680dp"
        android:orientation="horizontal">

        <View
            android:id="@+id/horizontal_line"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#E0E0E0"
            app:layout_constraintStart_toStartOf="parent" />

        <ImageView
            android:id="@+id/icon_home"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="-400dp"
            android:src="@drawable/ic_home" />

        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/ic_search"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="10dp"
            />
        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/ic_upload"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="10dp"
            />
        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/ic_reels"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="10dp"
            />
        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/ic_profile_active"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="10dp"
            />
    </LinearLayout>
</RelativeLayout>

